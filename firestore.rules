rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Tweets collection
    match /tweets/{tweetId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalWatchers', 'userWatching'])
      );
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is number
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv']
        && request.resource.data.rating in ['love', 'hate', 'meh'];
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        // Allow updating likes array only
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
      );
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
      // Allow updating disclaimer acceptance
      allow update: if isSignedIn() && request.auth.uid == userId
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['disclaimerAccepted', 'disclaimerAcceptedAt']);
    }

    // Watchlists collection
    match /watchlists/{watchlistId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User reviews subcollection
    match /users/{userId}/reviews/{reviewId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Ratings collection for Tinder-style app
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is string
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv']
        && request.resource.data.rating in ['love', 'hate', 'meh'];
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // AI Recommendations cache collection
    match /recommendations/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // AI Recommendations sessions collection
    match /ai_recommendations/{sessionId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.recommendations is list
        && request.resource.data.analysis is map
        && request.resource.data.source in ['ai_generated', 'fallback'];
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User recommendations collection (unique recommendations)
    match /user_recommendations/{recommendationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is string
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv']
        && request.resource.data.source in ['ai_generated', 'fallback'];
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Dismissed recommendations collection
    match /dismissed_recommendations/{dismissalId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is string
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv'];
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User analyses collection (AI analysis data)
    match /user_analyses/{analysisId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.analysis is map
        && request.resource.data.source in ['ai_generated', 'fallback'];
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User preferences collection (likes/dislikes for recommendations)
    match /user_preferences/{preferenceId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.itemId is string
        && request.resource.data.itemType is string
        && request.resource.data.preference in ['like', 'dislike', 'neutral'];
      allow update: if isSignedIn() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.preference in ['like', 'dislike', 'neutral'];
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Impact Moments collection
    match /impact_moments/{momentId} {
      allow read: if true; // Public read
      // Allow create when authenticated OR when auth is null (server-side API)
      // Note: API routes use client SDK server-side, so request.auth may be null
      // We validate userId in the API, so allow create when auth is null OR when user matches
      allow create: if request.auth == null || (isSignedIn()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.text is string
        && request.resource.data.tags is list
        && request.resource.data.tags.size() > 0
        && request.resource.data.effortLevel in ['tiny', 'medium', 'deep']
        && request.resource.data.ripples is map
        && request.resource.data.rippleCount is int);
      allow update: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        // Allow updating ripples, rippleCount, and joinedByUsers
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['ripples', 'rippleCount', 'joinedByUsers'])
      );
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if true; // Public read
        allow create: if isSignedIn()
          && request.resource.data.createdBy == request.auth.uid
          && request.resource.data.text is string
          && request.resource.data.momentId == momentId;
        allow update: if isSignedIn() 
          && resource.data.createdBy == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'updatedAt']);
        allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
      }
    }

    // Disclaimer acceptance collection
    match /disclaimer_acceptance/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Rituals collection (public read, admin write)
    match /rituals/{ritualId} {
      allow read: if true; // Public read for ritual definitions
      allow create, update, delete: if false; // Admin only (handled server-side)
    }

    // User ritual state subcollection (single document per user)
    match /users/{userId}/ritual_state/{stateId} {
      // Allow read for authenticated users reading their own data, or when auth is null (server-side API)
      allow read: if (isSignedIn() && request.auth.uid == userId) || request.auth == null;
      // Allow create/update only by the owner
      // Note: API routes use client SDK server-side, so request.auth may be null
      // We validate userId in the API, so allow create when auth is null OR when user matches
      allow create: if request.auth == null || (isSignedIn() 
        && request.auth.uid == userId 
        && stateId == userId
        && request.resource.data.userId == userId);
      // Allow update by owner or when auth is null (server-side API)
      allow update: if request.auth == null || (isSignedIn() 
        && request.auth.uid == userId 
        && stateId == userId);
      allow delete: if false; // Don't allow deletion, only updates
    }

    // User ritual completions subcollection
    match /users/{userId}/ritual_completions/{completionId} {
      // Allow read for authenticated users reading their own data, or when auth is null (server-side API)
      allow read: if (isSignedIn() && request.auth.uid == userId) || request.auth == null;
      // Allow create only by the owner with proper data structure
      // Note: API routes use client SDK server-side, so request.auth may be null
      allow create: if request.auth == null || (isSignedIn()
        && request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.ritualId is string
        && request.resource.data.completedAt is timestamp
        && request.resource.data.completedQuietly is bool
        && request.resource.data.date is string);
      // Allow update only by the owner, only for sharedAsMomentId
      // Note: API routes use client SDK server-side, so request.auth may be null
      allow update: if request.auth == null || (isSignedIn() && request.auth.uid == userId && resource.data.userId == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['sharedAsMomentId']));
      allow delete: if false; // Don't allow deletion
    }
  }
}
