rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Tweets collection
    match /tweets/{tweetId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalWatchers', 'userWatching'])
      );
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is number
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv']
        && request.resource.data.rating in ['love', 'hate', 'meh'];
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        // Allow updating likes array only
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
      );
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
      // Allow updating disclaimer acceptance
      allow update: if isSignedIn() && request.auth.uid == userId
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['disclaimerAccepted', 'disclaimerAcceptedAt']);
    }

    // Watchlists collection
    match /watchlists/{watchlistId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User reviews subcollection
    match /users/{userId}/reviews/{reviewId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Ratings collection for Tinder-style app
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is string
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv']
        && request.resource.data.rating in ['love', 'hate', 'meh'];
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // AI Recommendations cache collection
    match /recommendations/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // AI Recommendations sessions collection
    match /ai_recommendations/{sessionId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.recommendations is list
        && request.resource.data.analysis is map
        && request.resource.data.source in ['ai_generated', 'fallback'];
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User recommendations collection (unique recommendations)
    match /user_recommendations/{recommendationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is string
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv']
        && request.resource.data.source in ['ai_generated', 'fallback'];
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Dismissed recommendations collection
    match /dismissed_recommendations/{dismissalId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.tmdbId is string
        && request.resource.data.title is string
        && request.resource.data.mediaType in ['movie', 'tv'];
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User analyses collection (AI analysis data)
    match /user_analyses/{analysisId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.analysis is map
        && request.resource.data.source in ['ai_generated', 'fallback'];
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User preferences collection (likes/dislikes for recommendations)
    match /user_preferences/{preferenceId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.itemId is string
        && request.resource.data.itemType is string
        && request.resource.data.preference in ['like', 'dislike', 'neutral'];
      allow update: if isSignedIn() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.preference in ['like', 'dislike', 'neutral'];
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Impact Moments collection
    match /impact_moments/{momentId} {
      allow read: if true; // Public read
      allow create: if isSignedIn()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.text is string
        && request.resource.data.tags is list
        && request.resource.data.tags.size() > 0
        && request.resource.data.effortLevel in ['tiny', 'medium', 'deep']
        && request.resource.data.ripples is map
        && request.resource.data.rippleCount is int;
      allow update: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        // Allow updating ripples and rippleCount
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['ripples', 'rippleCount'])
      );
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if true; // Public read
        allow create: if isSignedIn()
          && request.resource.data.createdBy == request.auth.uid
          && request.resource.data.text is string
          && request.resource.data.momentId == momentId;
        allow update: if isSignedIn() 
          && resource.data.createdBy == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'updatedAt']);
        allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
      }
    }

    // Disclaimer acceptance collection
    match /disclaimer_acceptance/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
